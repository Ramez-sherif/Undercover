@model PlaySafe.ViewModels.playerViewModel

@{
    ViewData["Title"] = "Details";
    var photoPath = "images" + "/" + ViewBag.id + "/" + (ViewBag.photo ?? "defaultImage.jpg");
}

<h3>Player Details</h3>
<hr>

<div>
    <dl class="row">
       
        <dd class="col-md-4">
            <img class="card-img-top" src="~/@photoPath" alt="no Photo" id="img" width="70" height="250">
        <dd/>
        <dt class="col-sm-2">
                   Name:
        </dt>
        <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.name)
        </dd>
        <dt class="col-sm-2">
                   Username:
        </dt>
        <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.userName)
        <dt class="col-sm-2">
            Created Date:
        </dt>
        <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.createdDate)
        </dd>
        <dt class="col-sm-2">
            Phone Number:
        </dt>
        <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.phoneNum)
        </dd>
        <dt class="col-sm-2">
            Points:
        </dt>
        <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.points)
        </dd>
    </dl>
</div>

