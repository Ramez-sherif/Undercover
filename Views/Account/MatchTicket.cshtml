@*model PlaySafe.Models.comments*@
@{
    var name = Context.Session.GetString("Name");
}
<style>
    .box-shadow {
        background-color: lightgray;
        /*    background-color: #AA1111*/
        color: black;
        padding: 10px;
        border-radius: 4px;
        box-shadow: 2px 2px 10px black;
        justify-content: center;
    }
</style>
<section>
    <div class="container my-5 py-5 text-dark">
        <div class="row d-flex justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-6">
                <div class="">
                    <div class="card-body p-4" style="border-radius:25px;">
                        <div class="d-flex flex-start w-100">

                            <div class="w-100">
                                <div class="box-shadow">
                                    <h3>UnderCover</h3>

                                    <div class="form-outline">
                                        <hr />
                                        <label class="form-label" for="Name">Name:@name</label><br />
                                        <label class="form-label" for="data">Price: @ViewBag.value $</label><br />
                                        <label class="form-label" for="data">Paid With Points: @ViewBag.points </label><br />
                                        <label class="form-label" for="data">Date:@DateTime.Now </label><br />
                                        <hr />
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between mt-3">
                                    @*
                                    <button class="btn btn-primary" onclick="myfun()">Print</button>*@

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br>
                <button class="btn btn-warning" style="margin-left:50%;" onclick="myfun()">Print</button>
            </div>
        </div>
    </div>

</section>

<script>

    function myfun() {
        window.print();
    }

</script>