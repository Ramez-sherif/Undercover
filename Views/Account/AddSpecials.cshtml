@model PlaySafe.ViewModels.specialsViewModel
@{
    ViewData["Title"] = "Specials";
}
<style>
    .box-shadow {
        background-color: #315B83;
        /*color: white;*/
        padding: 10px;
        border-radius: 4px;
       /* box-shadow: 2px 2px 10px black;*/
        box-shadow: rgb(0,0,0) 2px 2px 10px ;
        black justify-content: center;
    }

  
   
</style>
<h3 style="color:#e8e6e3">Add Specials</h3>
<hr>
<div class="container my-5 py-5 text-dark">
    <div class="row d-flex justify-content-center">
        <div class="col-md-20 col-lg-16 col-xl-12">
            <form enctype="multipart/form-data" asp-action="AddSpecials">
                <div class="box-shadow">
                    <div class="form-group">
                        <label for="exampleFormControlFile1" style="color:#D1CDC7;"> Add Images </label>
                        <input asp-for="photo" class="form-control-file" id="exampleFormControlFile1" style="color:#D1CDC7;">
                        @*<span asp-validation-for="photo" class="text-danger" ></span>*@
                    </div>
                    <br />

                    <div class="form-outline mb-4">
                        <label class="form-label" for="Price" style="color:#D1CDC7;">Price</label>

                        <input asp-for="price" id="form4Example1" class="form-control" style="background-color:#131516;color:white;" />
                        @*<span asp-validation-for="price" class="text-danger"></span>*@
                    </div>

                    <div class="form-outline mb-4">
                        <label class="form-label" for="form4Example3" style="color:#D1CDC7;">Description</label>
                        <textarea asp-for="description" class="form-control" id="form4Example3" rows="4" style=" background-color:#131516;color:white;"></textarea>
                        @*<span asp-validation-for="description" class="text-danger"></span>*@
                    </div>
                    <!-- Submit button -->
                    <button type="submit" class="btn" style="background-color:#967000;color:#D1CDC7;">
                        ADD
                    </button>

                </div>
            </form>
        </div>
    </div>
</div>