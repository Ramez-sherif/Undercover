@{
    var photoPath = "images" + "/" + ViewBag.id + "/" + (ViewBag.photo ?? "defaultImage.jpg");
}
<style>
    .box-shadow {
        background-color: #3D72A4;
        color: white;
        padding: 10px;
        border-radius: 4px;
        box-shadow: 2px 2px 10px black;
        justify-content: center;
    }
    h5{
        text-align: center;
    }

    input::placeholder {
        font-size: 15px;
    }
</style>
<h3 style="color:#e8e6e3">Add Points</h3>
<hr>
<div class="container my-5 py-5 text-dark">
    <div class="row d-flex justify-content-center">
        <div class="col-md-20 col-lg-16 col-xl-12">
            <form asp-action="addPoints">
                <div class="box-shadow">
                    <div class="d-flex flex-start">
                        <img class="rounded-circle shadow-1-strong me-3"
                             src="~/@photoPath" alt="avatar" width="65"
                             height="65" />
                        <div class="">
                            <h5 style="float:left;">@ViewBag.Name</h5>

                            <div class="">
                                <input style="margin-right:20px;" name="points" type="number" min="1" max="1000" placeholder="Add Points" />
                            </div>
                            <div class="d-flex justify-content-between mt-3">
                                <h6>Player Points: @ViewBag.points</h6>
                            </div>
                                <br>
                                <button type="submit" class="btn btn-warning">
                                    Save <i class="fas fa-long-arrow-alt-right ms-1"></i>
                                </button>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>